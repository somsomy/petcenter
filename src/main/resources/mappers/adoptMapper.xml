<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.somsomy.mapper.AdoptMapper">
	<select id="getMaxNum" resultType="java.lang.Integer">
		select max(num) from adoptboard
	</select>
	
	<select id="getBoardList" resultType="com.somsomy.domain.AdoptBean">
		select * from adoptboard order by num desc limit #{startRow}, #{pageSize}
	</select>
	
	<insert id="writeAdopt">
		insert into adoptboard
		values(#{num}, #{name}, #{catName}, #{subject}, #{content}, #{date}, #{readcount})
	</insert>
	
	<select id="getAdopt" resultType="com.somsomy.domain.AdoptBean">
		select * from adoptboard where num=#{num}
	</select>
	
	<update id="updateReadcount">
		update adoptboard set readcount=readcount+1 where num=#{num}
	</update>
	
	<update id="updateAdopt">
		update adoptboard set catname=#{catName}, subject=#{subject}, content=#{content} where num=#{num}
	</update>
	
	<delete id="deleteAdopt">
		delete from adoptboard where num=#{num}
	</delete>
</mapper>